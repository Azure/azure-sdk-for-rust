{
  "tasks": [
    {
      "label": "Start docs site (requires nightly)",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "cargo",
      "args": [
        "watch",
        "-s",
        "RUSTDOCFLAGS=\"--enable-index-page -Z unstable-options\" cargo +nightly doc --workspace --no-deps",
        "-s",
        "http-server --index --port 8080 ./target/doc"
      ],
      "isBackground": true,
      "problemMatcher": [
        "$rustc"
      ]
    }
  ]
}
